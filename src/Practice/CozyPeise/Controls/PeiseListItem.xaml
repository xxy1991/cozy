<UserControl x:Class="CozyPeise.Controls.PeiseListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CozyPeise.Controls"
             mc:Ignorable="d"
             d:DesignHeight="50" d:DesignWidth="400">
    <StackPanel Height="50" Orientation="Horizontal">
        <Rectangle Fill="{Binding Color0}" Width="100" />
        <Rectangle Fill="{Binding Color1}" Width="100" />
        <Rectangle Fill="{Binding Color2}" Width="100" />
        <Rectangle Fill="{Binding Color3}" Width="100" />
        <Rectangle Fill="{Binding Color4}" Width="100" />
        <Rectangle Fill="{Binding Color5}" Width="100" />
        <Rectangle Fill="{Binding Color6}" Width="100" />
        <Rectangle Fill="{Binding Color7}" Width="100" />
    </StackPanel>
</UserControl>
