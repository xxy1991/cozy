<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:CozyRSS.Resources.RSSContent">
    <DockPanel x:Key="RSSContentTitle">
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="20" Text="{Binding Title}" />
        <DockPanel HorizontalAlignment="Right" VerticalAlignment="Center">
            <Button Content="全部设为已读" FontSize="20"/>
            <Button Content="刷新" Margin="10 0 0 0" FontSize="20"
                        Command="{Binding UpdateContentCommand}"/>
        </DockPanel>
    </DockPanel>
</ResourceDictionary>